<Page x:Class="Device.WPF.TemperatureApp.SetupWizard.SetupWizard_YourInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Device.WPF.TemperatureApp.SetupWizard"
      mc:Ignorable="d" 
      Title="Setup Wizard - Your Information">

    <StackPanel>
        <TextBlock FontWeight="Bold" Text="E-mail Address" Margin="0 0 0 3"/>
        <TextBox x:Name="tb_Email" KeyUp="Tb_Email_OnKeyUp" Padding="8"/>

        <TextBlock FontWeight="Bold" Text="First Name (optional)" Margin="0 0 0 3"/>
        <TextBox x:Name="tb_FirstName" KeyUp="Tb_FirstName_OnKeyUp" Padding="8"/>
        
        <TextBlock FontWeight="Bold" Text="Last Name (optional)" Margin="0 0 0 3"/>
        <TextBox x:Name="tb_LastName" KeyUp="Tb_LastName_OnKeyUp" Padding="8"/>
        
    </StackPanel>
</Page>
