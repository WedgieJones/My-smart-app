<Page x:Class="Device.WPF.TemperatureApp.SetupWizard.SetupWizard_DeviceInformation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Device.WPF.TemperatureApp.SetupWizard"
      mc:Ignorable="d" 
      Title="SetupWizard_DeviceInformation">

    <StackPanel>
        <StackPanel>
            <TextBlock FontWeight="Bold" Text="Device Name(optional)" Margin="0 0 0 3"/>
            <TextBox x:Name="tb_DeviceName" KeyUp="Tb_DeviceName_OnKeyUp" Padding="8"/>
            
            <TextBlock FontWeight="Bold" Text="Location (optional)" Margin="0 0 0 3"/>
            <TextBox x:Name="tb_Location" KeyUp="Tb_Location_OnKeyUp"  Padding="8"/>
        </StackPanel>
    </StackPanel>
</Page>
