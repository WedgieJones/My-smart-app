<Window x:Class="IOT_device.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IOT_device"
        mc:Ignorable="d"
        Title="IOT DEVICE" Height="150" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="tbStateMessage" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="btnOnOff" Click="BtnOnOff_OnClick" Content="Turn On" Padding="10 5" Margin=" 0 20 0 0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
